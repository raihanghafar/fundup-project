<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="0dp" />
            <stroke
                android:color="#000000"
                android:width="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="0dp" />
            <stroke
                android:color="#000000"
                android:width="2dp" />
        </shape>
    </item>
</selector>